{
  "name": "@freshworks-jaya/jaya-lib",
  "description": "Collection of libraries for building Freshchat Marketplace Apps",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --parallel",
    "build": "lerna run build --no-private",
    "watch": "lerna run watch --parallel",
    "test": "lerna run test --no-private --stream --concurrency 1",
    "lint": "lerna run lint"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-typescript-sort-keys": "^1.6.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build"
    }
  },
  "resolutions": {
    "handlebars": "4.7.7"
  }
}
