{{#each (reverse messages) as | message |}}
{{!-- System message --}}
{{#if (isTruthy message.meta_data)}}
[SYS] SYSTEM {{moment message.created_time format="hh:mm A, Do MMM" offset=../timezoneOffset}}:
{{#each message.message_parts as | message_part |}}
{{#if message_part.text}}
{{{message_part.text.content}}}
{{/if}}
{{/each}}
{{!-- User message --}}
{{else if (and (eq message.actor_type "user") (eq message.message_type "normal"))}}
{{#if (and ../user ../user.first_name)}}
[USR] {{../user.first_name}}  {{moment message.created_time format="hh:mm A, Do MMM" offset=../timezoneOffset}}:
{{else}}
[USR] User {{moment message.created_time format="hh:mm A, Do MMM" offset=../timezoneOffset}}:
{{/if}}
{{#each message.message_parts as | message_part |}}
{{#if message_part.text}}
{{{message_part.text.content}}}
{{/if}}
{{#if message_part.image}}
Image: {{message_part.image.url}}
{{/if}}
{{#if message_part.file}}
Attached file: {{message_part.file.name}}
{{/if}}
{{/each}}
{{!-- Agent message --}}
{{else}}
{{#if message.actor_id}}
{{#with (lookup ../agents message.actor_id) as | agent |}}
[AGT] {{agent.first_name}} {{moment message.created_time format="hh:mm A, Do MMM" offset=../timezoneOffset}}:
{{/with}}
{{else}}
[BOT] Bot {{moment message.created_time format="hh:mm A, Do MMM" offset=../timezoneOffset}}:
{{/if}}
{{#each message.message_parts as | message_part |}}
{{#if message_part.text}}
{{{message_part.text.content}}}
{{/if}}
{{#if message_part.image}}
Image: {{message_part.image.url}}
{{/if}}
{{#if message_part.file}}
Attached file: {{message_part.file.name}}
{{/if}}
{{/each}}
{{/if}}

{{/each}}
{{#if isIncludeFreshchatLink}}
{{conversationUrl}}
{{/if}}